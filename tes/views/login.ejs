            </div>
            <li class="navbar-links"><a href="/merchandise">Merch</a></li>
            <li class="navbar-links" id="info">info  &#11167</li>
            <div class="info-content">
                <a href="/cara-daftar">cara daftar</a>
                <a href="/ketentuan-umum">Ketentuan Umum Lomba</a>
                <!-- <a href="/jadwal-acara">jadwal acara</a> -->
            </div>
            <li class="navbar-login"><a href="/login">Login</a></li>
        </ul>
    </nav>

    <div class="img-login">
        <img src="/img/login-img.png" alt="gambar orang" width="50%" >
    </div>
    <div class="form-login">
        <form action="/login" method="post">
            <h1>LOG IN</h1>
            <div class="em-pass">
                <input type="email" name="email" placeholder="email  " required>
                <input type="password" name="password" id="password" placeholder="password" required>
            </div>

            <div class="show">
                <input type="checkbox" name="show" id="show" >
                <label for="show">show</label>
            </div>
            
            <div class="message">
                <% message.forEach(element => { %>
                    <p>* <%- element %> </p>
                <% }) %>
            </div>

            <div class="btn-container">
                <button class="btn-login" type="submit">LOG IN</button>
                <h4>atau</h4>
                <a class="daftar" href="/register">Daftar</a>
            </div>

            <a href="/forgot-password">forget password?</a>
        </form>
    </div>
</body>
<script src="/js/login.js"></script>
<script src="/js/navbar.js"></script>
</html>