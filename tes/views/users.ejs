                                    <td><label for="fotoTim">Upload Foto Tim:</label></td>
                                    <td><input type="file" name="fotoTim" id="fotoTim" accept="image/*" required></td>
                                    <td><button type="submit">submit</button></td>
                                </form>
                        <% } else { %>
