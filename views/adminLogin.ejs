<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/login-ad.css">
</head>
<body>
    <div style="height: 60px; width: 100%; background-color: red;"></div>

    <div class="card">
        <h1>ADMIN LOGIN</h1>
        <form action="/code/resta/panitia/login" method="post">
            <div class="input atas">
                <input type="text" name="username" id="email" placeholder="Email" required
                >
            </div>
            <div class="input">
                <input type="password" name="password" id="password" placeholder="password" required>
            </div>
            <div class="show">
                <input type="checkbox" name="show" id="show" onchange="showPass()">
                <label for="show">show password</label>
            </div>

            <div class="message">
                <% msgAdmin.forEach(element => { %>
                    <p>* <%- element %> </p>
                <% }) %>
            </div>

            <div class="button">
                <button class="login" type="submit">log in</button>
            </div>

        </form>

    </div>
</body>
<script src="/js/login.js"></script>
</html>

